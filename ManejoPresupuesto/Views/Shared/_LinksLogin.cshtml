<!--Como se usa el SignInManager para esta vista, entonces se tiene que inyectar
    Esta clase de SignInManager.
-->
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager


<!-- Aqui se programa como se van a ver los letreritos en la esquina superior derecha, donde, si
    el signinmanager dice que si está loggeado, va a mostrar el nombre del usuario y un link para
    desloguearse a través de la acción logout.
    
    En el caso de que no esté logueado, va a mostrar un botón de registro, y además uno para loguearse.
-->
<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hola, @User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="logout" asp-controller="usuarios">
                <button type="submit" class="nav-link btn-primary btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else{

        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="usuarios" asp-action="Registro">
                Registro
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="usuarios" asp-action="Login">
                Login
            </a>
        </li>


    }

</ul>