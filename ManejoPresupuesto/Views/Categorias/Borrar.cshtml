@model Categoria

@{
    ViewData["Title"] = "Borrar categoría";
}

<h3 class="mb-3">Está seguro que desea borrar la categoría @Model.Nombre?</h3>

<form asp-action="BorrarCategoria" class="container mb-3">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Volver a Categorias</a>


</form>
